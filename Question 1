import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int[] numbers = new int[10];

        // Input 10 integers
        System.out.println("Enter 10 integers:");
        for (int i = 0; i < numbers.length; i++) {
            numbers[i] = scanner.nextInt();
        }

        // Print numbers in reverse order
        System.out.println("\nNumbers in reverse order:");
        for (int i = numbers.length - 1; i >= 0; i--) {
            System.out.print(numbers[i] + " ");
        }

        // Calculate sum of numbers at even indices (0, 2, 4, ...)
        int sumEvenIndices = 0;
        for (int i = 0; i < numbers.length; i += 2) {
            sumEvenIndices += numbers[i];
        }

        System.out.println("\n\nSum of numbers at even indices: " + sumEvenIndices);

        scanner.close();
    }
}
